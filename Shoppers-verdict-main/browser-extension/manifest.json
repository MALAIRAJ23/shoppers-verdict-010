{
  "manifest_version": 3,
  "name": "Shopper's Verdict",
  "version": "2.0.0",
  "description": "AI-powered shopping assistant that analyzes product reviews and provides worth-to-buy scores with keyboard shortcuts and history",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.amazon.in/*",
    "https://www.amazon.com/*",
    "https://www.flipkart.com/*",
    "http://localhost:5000/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.in/*",
        "https://amazon.in/*",
        "https://www.amazon.com/*",
        "https://amazon.com/*",
        "https://www.flipkart.com/*",
        "https://flipkart.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Shopper's Verdict (Alt+Shift+V)",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "analyze-product": {
      "suggested_key": {
        "default": "Alt+Shift+V",
        "mac": "MacCtrl+Shift+V"
      },
      "description": "Analyze current product page"
    }
  }
}
